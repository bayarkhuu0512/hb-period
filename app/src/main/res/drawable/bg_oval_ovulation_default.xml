<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="@color/bgOvalOvulationColor" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@color/bgOvalOvulationColor" />
            <solid android:color="@color/bgOvalOvulationColor" />
        </shape>
    </item>

</layer-list>